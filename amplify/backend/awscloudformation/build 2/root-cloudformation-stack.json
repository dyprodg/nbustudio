              "Version": "2012-10-17",
              "Statement": [
                {
                  "Effect": "Allow",
                  "Action": [
                    "logs:CreateLogGroup",
                    "logs:CreateLogStream",
                    "logs:PutLogEvents"
                  ],
                  "Resource": "arn:aws:logs:*:*:*"
                },
                {
                  "Effect": "Allow",
                  "Action": ["iam:UpdateAssumeRolePolicy", "iam:GetRole"],
                  "Resource": {
                    "Fn::GetAtt": ["AuthRole", "Arn"]
                  }
                },
                {
                  "Effect": "Allow",
                  "Action": ["iam:UpdateAssumeRolePolicy", "iam:GetRole"],
                  "Resource": {
                    "Fn::GetAtt": ["UnauthRole", "Arn"]
                  }
                }
